<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.VictorZahraa.hybridmarker.PerQuestionMarkingActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:showDividers="middle" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:orientation="horizontal" >

            <ScrollView
                android:id="@+id/questionTextScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/questionText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Large Text"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:id="@+id/answerTextScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#A7FF9F" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/answerText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Large Text"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1" >

            <com.VictorZahraa.hybridmarker.ScrollViewHelper
                android:id="@+id/scriptDisplayScrollView"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                
                android:background="@android:color/darker_gray" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/scriptDisplay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/page2200dpi" />
                </LinearLayout>
            </com.VictorZahraa.hybridmarker.ScrollViewHelper>

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@android:color/black"
                android:layout_weight="1" >
                
                <ImageButton
                    android:id="@+id/prevQuestionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_action_previous_item"
                    android:onClick="prevQuestion" />

                <ImageButton
                    android:id="@+id/nextQuestionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_action_next_item"
                    android:onClick="nextQuestion" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/canvasAnchorPoint"
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent" >
	</RelativeLayout>
	
	<RelativeLayout
	    android:id="@+id/markingScreenCanvasContainer"
	    android:layout_width="1200dp"
	    android:layout_marginTop="305dp"
	   	android:layout_marginBottom="-750dp"
	    android:layout_height="match_parent"
	    android:background="@android:color/transparent" >
	</RelativeLayout>

</RelativeLayout>