<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.VictorZahraa.hybridmarker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:enabled="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:permission="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.VictorZahraa.hybridmarker.MainScreenActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.VictorZahraa.hybridmarker.PdfDisplayScreenActivity"
            android:label="@string/title_activity_pdf_display_screen" >
        </activity>
        <activity
            android:name="com.VictorZahraa.hybridmarker.MainMarkingScreenActivity"
            android:label="@string/title_activity_main_marking_screen" >
        </activity>
        <activity
            android:name="com.VictorZahraa.hybridmarker.TestScriptBrowserActivity"
            android:label="@string/title_activity_test_script_browser" >
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
