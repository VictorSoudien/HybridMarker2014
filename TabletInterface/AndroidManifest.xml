<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.VictorZahraa.hybridmarker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:enabled="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:permission="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.VictorZahraa.hybridmarker.MainScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.VictorZahraa.hybridmarker.PdfDisplayScreenActivity"
            android:label="@string/title_activity_pdf_display_screen"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.VictorZahraa.hybridmarker.MainMarkingScreenActivity"
            android:label="@string/title_activity_main_marking_screen"
            android:screenOrientation="landscape"
            android:hardwareAccelerated="false" >
        </activity>
        <activity
            android:name="com.VictorZahraa.hybridmarker.TestScriptBrowserActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.VictorZahraa.hybridmarker.ScriptFinalizeAndUploadActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:hardwareAccelerated="false" >
        </activity>
        <activity
            android:name="com.VictorZahraa.hybridmarker.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.VictorZahraa.hybridmarker.PerQuestionMarkingActivity"
            android:label="@string/app_name" 
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
